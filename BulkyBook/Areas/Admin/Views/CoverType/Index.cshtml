@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification"></partial>

<div class="container p-3">
    <div class="row pt-5">
        <div class="col-6">
            <h2 class="text-primary">CoverType List</h2>
        </div>
        <div class="col-6 text-end">
           <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i>Create New List
           </a>
        </div>
    </div>

</div>

<table class="talbe table-bordered table-striped" style="width:100%">
   <thread>
       <tr>
           <th>CoverType Name</th>
           <th>Display Order</th>
       </tr>
   </thread>
   <tbody>
       @foreach (var obj in Model)
       {
           <tr>
              <td width="50%">
                  @obj.Name
              </td>
              <td>
                  <div class="w-75 btn-group" role="group">
                      <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id" class="mx-2 btn btn-primary">
                          <i class="bi bi-pencil-square"></i>Edit
                      </a>
                       <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id" class="mx-2 btn btn-danger">
                          <i class="bi bi-trash-fill"></i>Delete
                      </a>
                  </div>
              </td>
           </tr>

           
       }
   </tbody>
</table>